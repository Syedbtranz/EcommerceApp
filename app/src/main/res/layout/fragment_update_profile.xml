<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text"
    >
    <include
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text"
    android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_black"
            android:text="First Name"

            />




        <EditText
            android:id="@+id/input_f_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:textColorHint="@color/view_divider_color"
             />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Last Name"
        android:textColor="@color/color_black"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="10dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:textColorHint="@color/view_divider_color"
        android:id="@+id/input_last_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Date of Birth"
            android:textColor="@color/color_black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableRight="@drawable/cards_icon"
            android:hint="Date"
            android:textStyle="bold"
            android:padding="10dp"

            android:background="#E0E0E0"
            android:textSize="15dp"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:id="@+id/date_edit"
            android:textColorHint="#9E9E9E"/>
        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_data_of_birth" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mobile Number"
            android:textColor="@color/color_black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:padding="10dp"
            android:background="@color/view_divider_color"
            android:ems="10"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_mobile_number" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email Id"
        android:textColor="@color/color_black"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:editable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@color/view_divider_color"
            android:ems="10"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_email_id" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="?attr/colorPrimary"
            android:background="?button_bg_primary_border"
            android:paddingRight="10dp"
            android:layout_margin="20dp"
            android:id="@+id/edit_profile_submit_btn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Address 1"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_address_one" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:hint="Address 2"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_address_two" />
        <EditText

            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:hint="Address 3"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:textColorHint="@color/view_divider_color"
            android:id="@+id/input_address_three" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_country"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:prompt="@string/spinner_title"/>
       <!-- <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Country"
            android:textColorHint="@color/view_divider_color"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/input_address_country" />-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Pincode"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/input_address_postcode" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE ADDRESS"
            android:textColor="?attr/colorPrimary"
            android:background="?button_bg_primary_border"
            android:paddingRight="10dp"
            android:layout_margin="20dp"
            android:id="@+id/update_address_btn"
            />
       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Saved Card"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
           android:weightSum="2"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:layout_width="wrap_content"
