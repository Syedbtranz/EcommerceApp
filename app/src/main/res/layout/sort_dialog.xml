<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/reveal_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_text"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">
    <LinearLayout
        android:id="@+id/sort_dis_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sort_dis_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sort_dis_img"
            android:src="@drawable/empty"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_arrive_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sort_arrive_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Arrival"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sort_arrive_img"
            android:src="@drawable/empty"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_htol_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sort_htol_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price High to Low"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sort_htol_img"
            android:src="@drawable/empty"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_ltoh_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sort_ltoh_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Low to High"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sort_ltoh_img"
            android:src="@drawable/empty"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sort_pop_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/sort_pop_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popularity"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sort_pop_img"
            android:src="@drawable/checked"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Apply"
         android:textSize="12dp"
        android:textColor="@color/color_text"
        android:id="@+id/sort_apply_btn"
        android:background="?button_bg_primary"
        android:layout_gravity="center_horizontal" />
  <!--  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APPLY"
        android:textSize="12dp"
        android:textColor="@color/color_text"
        android:background="@drawable/button_bg_colorprimary"
        android:layout_weight="1"
        android:id="@+id/filter_apply" />-->
</LinearLayout>

</LinearLayout>